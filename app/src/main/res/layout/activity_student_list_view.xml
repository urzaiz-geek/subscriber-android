<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentListViewActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListStudent"
        android:layout_width="389dp"
        android:layout_height="629dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <TextView
        android:id="@+id/textViewTitleList"
        style="@style/TextViewTitleStyle"
        android:layout_width="407dp"
        android:layout_height="76dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="@string/title_list"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewListStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAdd"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="321dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:baselineAlignBottom="false"
        android:src="@drawable/ic_baseline_add_24"
        app:fabCustomSize="63dp"
        app:maxImageSize="30dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewListStudent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewListStudent"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewListStudent" />

</androidx.constraintlayout.widget.ConstraintLayout>